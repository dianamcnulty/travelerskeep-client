<p id="content-section-alerts" class='alert'></p>
<div class='content-page-container'>
  <h3>{{#if vacation.state}}
    {{vacation.state}},
    {{/if}}{{vacation.country}}
  </h3>
  <!-- carousel -->
  {{#if vacation.photos}}
		<img id='scroll-right' style='height:20px;' src='https://png.icons8.com/?id=46409&size=540'>
    <div class="rg-image-wrapper">
			<div class="rg-image-nav">
       {{#each vacation.photos as |photo|}}
          <img class='thumb' style='height:75px;' data-url={{photo.img}} data-caption={{photo.caption}}  alt={{photo.caption}} src={{photo.img}}>
        {{/each}}
		</div>
    	</div>
		<img id='scroll-left' style='height:20px;' src='https://png.icons8.com/?id=42895&size=540'>
		{{/if}}

  <!--end carousel -->
  <section>
    <div class='feature' id='highlighted-content'>
      {{#if vacation.photos}}
<img style='max-width:90%; max-height:90%;' src={{vacation.photos.0.img}}>
<p>{{vacation.photos.0.caption}}</p>
{{else if vacation.stories}}
  <h3>{{vacations.stories.0.title}}</h3><br>
  <p class='story'>{{vacation.stories.0.content}}</p><br><a id="go-edit-story" data-id={{vacation.story.0.id}}>edit story</a>
{{/if}}
    </div>
  </section>
    <!-- show this section for all trips to this country-->
    <section class='story-list'>
      <div id='vacation-description'>
      <h5>{{vacation.year}}</h5>
      {{#if vacation.companions}}
      <p>You traveled here with {{vacation.companions}}</p>
      {{/if}}
      </div>
      {{#if vacation.stories}}
      <div id='stories-container'>
        <h5>Stories</h5>
        <!-- show bulleted list of stories for each story -->
        <ul>
          {{#each vacation.stories as |story|}}
          <li><a class='story-link' data-id={{story.id}}>{{story.title}}</a></li>
          {{/each}}
        </ul>
      </div>
      {{/if}}
      <button id='add-story-photo' data-id='{{vacation.id}}'>Add Stories and Photos</button>
      <button id='update-vacation-btn' data-id='{{vacation.id}}'>Edit Trip Details</button>
      <button id='delete-vacation-btn' data-id="{{vacation.id}}" type="button" data-toggle="modal" data-target="#delete-vacation-modal">Delete Trip</button>
    </section>
</div>
